server {
    listen {{ website.port }} default_server;
    listen [::]:{{ website.port }} default_server;

    root {{ website.document_root }};
    index index.html index.htm;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
}
